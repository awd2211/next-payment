        "version": "1.0"
    },
    "host": "localhost:40021",
    "basePath": "/api/v1",
    "paths": {
        "/webhooks/stripe/disputes": {
            "post": {
                "description": "自动接收Stripe dispute.created, dispute.updated等事件",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Webhooks"
                ],
                "summary": "接收Stripe争议webhook",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Stripe签名",
                        "name": "Stripe-Signature",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "description": "Type \"Bearer\" followed by a space and JWT token.",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}